<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="LineChart">
        <attr name="grid_color" format="color">#eeeeee</attr>
        <attr name="draw_vertical_grid" format="boolean">true</attr>
        <attr name="draw_horizontal_grid" format="boolean">true</attr>
        <attr name="draw_grid" format="boolean">true</attr>
        <attr name="horizontal_steps" format="integer">10</attr>
        <attr name="vertical_steps" format="integer">10</attr>
        <attr name="line_thickness" format="dimension">2dp</attr>
        <attr name="dot_visibility" format="enum">
            <enum name="invisible" value="0" />
            <enum name="visible" value="1" />
            invisible
        </attr>
        <attr name="dot_size" format="dimension">4dp</attr>
        <attr name="fill_area" format="boolean">false</attr>
    </declare-styleable>

    <declare-styleable name="PieChart">
        <attr name="ring" format="boolean">false</attr>
        <attr name="ring_thickness" format="dimension">10dp</attr>
    </declare-styleable>

</resources>